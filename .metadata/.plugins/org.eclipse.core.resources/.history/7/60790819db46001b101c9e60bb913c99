<?xml version="1.0" encoding="UTF-8"?>

<beans:beans
	xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    			    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    			    http://www.springframework.org/schema/security
   			        http://www.springframework.org/schema/security/spring-security-4.0.xsd">

	<!-- spring security configuration -->
	<http auto-config="true">
		<intercept-url pattern="/stores**"
			access="hasRole('ROLE_ADMIN')" />
		 <intercept-url pattern="/results**"
			access="hasRole('ROLE_ADMIN')" />
		<!-- user-defined login form redirection -->
		<form-login login-page="/login" default-target-url="/"
			authentication-failure-url="/login?error" />

		<!-- logout url -->
		<logout logout-success-url="/login?logout" />

		<!-- csrf disabled -->
		<csrf disabled="true" />
	</http>

	
	<!-- spring authentication configuration via database -->
	<authentication-manager>
		<authentication-provider user-service-ref="userDetailsService">
			
		</authentication-provider>
	</authentication-manager>
	
	<beans:bean id="userDetailsService" class="com.spring.mvc.security.Authentication.MongoUserDetailService"/>
	
	<!-- database configuration (database = PostgreSQL) 
	<beans:bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<beans:property name="driverClassName"
			value="org.postgresql.Driver " />
		<beans:property name="url"
			value="jdbc:postgresql://localhost:5433/CRISPSpringMVCPrototype" />
		<beans:property name="username" value="postgres" />
		<beans:property name="password" value="PostgreSQL_2230?" />
	</beans:bean>-->
</beans:beans>